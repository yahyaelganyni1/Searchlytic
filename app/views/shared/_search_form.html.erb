<div class="search-container">
  <%= form_with url: articles_path, method: :get, class: "search-form" do |form| %>
    <div class="search-input-group">
      <%= form.text_field :query, 
          placeholder: "Search articles...", 
          class: "search-input",
          id: "search-input",
          autocomplete: "off",
          data: { controller: "search" } %>
      <%= form.submit "Search now", class: "search-button" %>
    </div>
  <% end %>
</div>